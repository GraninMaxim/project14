<Window x:Class="project14.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project14"
        mc:Ignorable="d"
        Title="Авторизация" WindowStartupLocation="CenterOwner" Height="130" Width="290" ResizeMode="NoResize" Activated="Window_Activate" Closing="Window_Closing">
    <Grid>
        <StackPanel>
            <PasswordBox x:Name="inpPassword" PasswordChar="*" Height="30"/>
            <Button Click = "Enter_Click" Content="Войти" IsDefault="True" Height="32"/>
            <Button Click = "Cansel_Click" Content="Отмена" IsCancel="True" Height="32"/>
        </StackPanel>
    </Grid>
</Window>
